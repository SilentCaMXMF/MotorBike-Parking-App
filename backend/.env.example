# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=192.168.1.67
DB_PORT=3306
DB_NAME=motorbike_parking_app
DB_USER=motorbike_app
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION

# JWT Configuration
JWT_SECRET=GENERATE_256_BIT_SECRET_FOR_PRODUCTION
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./uploads

# CORS
# Comma-separated list of allowed origins for production
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info

# Google Maps API
GOOGLE_MAPS_API_KEY=GET_YOUR_API_KEY_FROM_GOOGLE_CONSOLE

# Admin Credentials
# SECURITY WARNING: These credentials must be changed in production!
# Default admin account for system initialization
ADMIN_EMAIL=CHANGE_TO_YOUR_ADMIN_EMAIL
# Password requirements: 8+ characters, uppercase, lowercase, numbers
ADMIN_PASSWORD=CHANGE_TO_STRONG_PASSWORD_MIN_8_CHARS

# Database SSL Configuration
# Set to 'true' in production to enable encrypted database connections
DB_SSL=false

# IMPORTANT SECURITY NOTES: 
# - CHANGE ALL DEFAULT VALUES ABOVE BEFORE PRODUCTION DEPLOYMENT
# - Use strong, unique passwords for all credentials
# - Generate a secure 256-bit JWT secret
# - Set DB_SSL=true for production database connections
# - Never commit actual .env file to version control
# - Use environment-specific .env files for different deployments
